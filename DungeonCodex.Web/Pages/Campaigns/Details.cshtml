@page
@model DungeonCodex.Web.Pages.Campaigns.DetailsModel
@{
}

<h1>@Model.Campaign.CampaignName</h1>
<div>
    <h3>Characters</h3>
    <table class="table table-dark table-hover">
        <thead class="text-center">
            <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Level</th>
                <th>D&D Beyond</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var character in Model.Characters)
            {
                <tr>
                    <td>@character.Name</td>
                    <td>@character.Class</td>
                    <td>@character.Level</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(character.DDBLink))
                        {
                            <a href="@character.DDBLink" target="_blank" class="btn btn-primary btn-sm">
                                DDB <i class="fa fa-external-link-alt"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>